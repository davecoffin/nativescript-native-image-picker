<Page xmlns="http://schemas.nativescript.org/tns.xsd" loaded="pageLoaded" class="page" xmlns:ui="nativescript-native-image-picker">
    <StackLayout class="p-20">
        <Label text="{{ message }}" class="t-20 text-center c-black" textWrap="true"/>
        <Button tap="{{choosePhoto}}" text="Choose Photo" />
        <Image src="{{imageSrc}}" stretch="aspectFit"></Image>
    </StackLayout>
</Page>